<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">


    <ImageView
        android:id="@+id/imgItemCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_weight="2"
        app:srcCompat="@drawable/adv_header_login" />
    <LinearLayout
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtItemCartName"
                android:layout_width="176dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Tên sản phẩm"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDeleteItemCart"
                android:layout_width="41dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#EAEAEA"
                android:text="X"
                android:textColor="#000000"
                android:textSize="10dp" />

        </LinearLayout>

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/txtItemCartCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="17dp"
            android:text="20 000 đồng" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnTru"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#EAEAEA"
                android:text="-"
                android:textColor="#000000"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/txtCartQuantity"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textAlignment="center"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="23dp" />

            <Button
                android:id="@+id/btnCong"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#EAEAEA"
                android:text="+"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>