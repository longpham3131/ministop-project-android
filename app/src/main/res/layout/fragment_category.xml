<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.MyProject"
    android:background="@color/secondary_color"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"

    tools:context=".ui.home.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Danh mục"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:paddingLeft="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageButton
                    android:id="@+id/btn_category_1"
                    android:layout_width="130dp"
                    android:layout_height="110dp"
                    android:layout_x="0dp"
                    android:layout_y="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/thit_kho_dau_hu"
                    android:adjustViewBounds="true"
                    android:gravity="center_vertical"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_size_normal"
                    android:text="CƠM NGON MẸ NẤU" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageButton
                    android:id="@+id/btn_category_2"
                    android:layout_width="130dp"
                    android:layout_height="110dp"
                    android:layout_x="0dp"
                    android:layout_y="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/mi_cay"
                    android:adjustViewBounds="true"
                    android:gravity="center_vertical"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="MÌ"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_size_normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageButton
                    android:id="@+id/btn_category_3"
                    android:layout_width="130dp"
                    android:layout_height="110dp"
                    android:layout_x="0dp"
                    android:layout_y="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/khoai_tay_chien"
                    android:adjustViewBounds="true"
                    android:gravity="center_vertical"

                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="#000000"
                    android:text="THỨC ĂN NHANH" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageButton
                    android:id="@+id/btn_category_4"
                    android:layout_width="130dp"
                    android:layout_height="110dp"
                    android:layout_x="0dp"
                    android:layout_y="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/banh_tran_tron"
                    android:adjustViewBounds="true"
                    android:gravity="center_vertical"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="#000000"
                    android:text="ĂN VẶT" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageButton
                    android:id="@+id/btn_category_5"
                    android:layout_width="130dp"
                    android:layout_height="110dp"
                    android:layout_x="0dp"
                    android:layout_y="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/tra_sen_vang"
                    android:adjustViewBounds="true"
                    android:gravity="center_vertical"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="#000000"
                    android:text="NƯỚC UỐNG" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageButton
                    android:id="@+id/btn_category_6"
                    android:layout_width="130dp"
                    android:layout_height="110dp"
                    android:layout_x="0dp"
                    android:layout_y="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ngu_coc"
                    android:adjustViewBounds="true"
                    android:gravity="center_vertical"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="#000000"
                    android:text="THỨC ĂN CHAY" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="Giỏ hàng"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />
                <TextView
                    android:id="@+id/txtNumberItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="3 Món"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCart"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:paddingHorizontal="10dp"
                android:layout_marginBottom="50dp"
                />
            <TextView
                android:id="@+id/rvCartNull"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:paddingTop="75dp"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Hãy thỏa mãn cơn đói bằng các món ngon nào"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/txtTotalPriceCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:text="Tổng tiền: 0 Đ"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:textSize="20dp"
                />

            <Button
                android:id="@+id/btnGoCheckOut"
                android:layout_marginTop="20dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/theme_button"
                android:text="ĐI ĐẾN GIỎ HÀNG"
                android:textColor="@color/white"
                android:layout_gravity="center"

                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>